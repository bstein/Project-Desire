<!doctype html>
<!---Base code: https://developers.google.com/identity/sign-in/web/ -->
<html>
  <head>
    <title>Login</title>
    <meta name="google-signin-scope" content="profile email">
    <meta name="google-signin-client_id" content="<%= GOOGLE_CLIENT_ID %>.apps.googleusercontent.com">
    <script src="https://apis.google.com/js/platform.js" async defer></script>
  </head>
  <body>
    <h1>Project Desire</h1>
    <div class="g-signin2" data-onsuccess="onSignIn" data-theme="dark"></div>
    <script>
      function onSignIn(googleUser) {
        const id_token = googleUser.getAuthResponse().id_token;

        fetch('<%= DOMAIN_URI %>/verify-token', {
          method: 'POST',
          headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
          body: `${encodeURIComponent('idtoken')}=${encodeURIComponent(id_token)}`,
        }).then((res) => {
          if (res.status === 200) {
            // TODO - existing user
            location.replace('<%= DOMAIN_URI %>');
          } else if (res.status === 201) {
            // TODO - new user
            location.replace('<%= DOMAIN_URI %>/account');
          } else {
            location.reload(true);
          }
        });
      }
    </script>
  </body>
</html>